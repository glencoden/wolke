{
    "name": "wolke",
    "version": "1.0.0",
    "description": "docker cloud",
    "scripts": {
        "start": "npm run cache:validate && docker compose up -d --build && docker system prune -f",
        "stop": "docker compose down --rmi local",
        "restart": "npm stop && npm start",
        "db:init": "bash scripts/init-databases.sh",
        "db:backup": "bash scripts/backup-databases.sh",
        "db:restore": "bash scripts/restore-databases.sh",
        "cache:validate": "bash contexts/tsc/scripts/validate-cache.sh && bash contexts/berta-bot/scripts/validate-cache.sh && bash contexts/looney-api/scripts/validate-cache.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/glencoden/wolke.git"
    },
    "author": "glencoden",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/glencoden/wolke/issues"
    },
    "homepage": "https://github.com/glencoden/wolke#readme"
}
